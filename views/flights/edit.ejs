<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
    <h1><%= title %> </h1>
    <form action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:
        <input type="text" name="airline" value="<%= flight.airline %> ">
      </label><br>
      <label for="airport-input">Airport:
        <select name="airport">
          <option selected value="DEN">DEN</option>
          <option value="Aus">Aus</option>
          <option value="DFW">DFW</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
      </label><br>
      <label>Flight Number: 
          <input type="number" name="flightNo" value="<%= flight.flightNo %> ">
      </label><br>
      <label>Departs:
        <input type="datetime-local" name="departs" value="<%= flight.departs %> ">
      </label><br>
      <button type="submit">Save Flight</button>
    </form>
</main>


<%- include('../partials/footer') %>